generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts     Post[]
  image     String?
}

model Post {
  id            Int       @id @default(autoincrement())
  title         String
  slug          String
  content       String
  featuredImage String?
  description   String
  readingTime   Int
  authorId      Int
  published     Boolean
  createdAt     DateTime  @default(now())
  publishedAt   DateTime?
  updatedAt     DateTime
  author        User      @relation(fields: [authorId], references: [id])
}

model Slide {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  articleSlug String
  image       String
  createdAt   DateTime @default(now())
  settingId   Int
  setting     Settings @relation(fields: [settingId], references: [id])
}

model HomeGalleryImage {
  id    Int      @id
  title String
  date  DateTime
  image String
}

model NewsThumbnail {
  id    Int      @id
  title String
  date  DateTime
  image String
  url   String
}

model Settings {
  id                               Int     @id
  paginationLimit                  Int     @default(10)
  defaultPosterPostsImg            String  @default("")
  defaultPosterPostsPlaceholderImg String  @default("")
  defaultCoverPostsImg             String  @default("")
  defaultCoverPostsPlaceholderImg  String  @default("")
  facebookLink                     String  @default("")
  youtubeLink                      String  @default("")
  instagramLink                    String  @default("")
  tiktokLink                       String  @default("")
  siteName                         String  @default("")
  siteDescription                  String  @default("")
  siteUrl                          String  @default("")
  homepageCarouselSlides           Slide[]
}

model AboutMainImage {
  id           Int                   @id
  image        String
  translations AboutMainTranslated[]
}

model AboutMainTranslated {
  language String         @id
  image    AboutMainImage @relation(fields: [imageId], references: [id])
  imageId  Int
  title    String
  content  String
}

model GalleryImage {
  id        Int            @id @default(autoincrement())
  src       String
  title     String
  date      DateTime?
  createdAt DateTime       @default(now())
  tags      TagsOnImages[]
}

model ImageTag {
  id        Int            @id @default(autoincrement())
  name      String
  createdAt DateTime       @default(now())
  images    TagsOnImages[]
}

model TagsOnImages {
  image   GalleryImage @relation(fields: [imageId], references: [id])
  imageId Int
  tag     ImageTag     @relation(fields: [tagId], references: [id])
  tagId   Int

  @@id([imageId, tagId])
}
